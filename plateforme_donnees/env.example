# Fichier d'exemple pour les variables d'environnement
# Copiez ce fichier vers .env et remplissez les valeurs
# Sur PythonAnywhere, créez ce fichier dans : ~/votre-repo/plateforme_donnees/.env

# Django
DEBUG=False
SECRET_KEY=votre-clé-secrète-production-ici

# PythonAnywhere
PYTHONANYWHERE_USERNAME=votreusername

# Base de données MySQL (pour PythonAnywhere)
DB_NAME=votreusername$plateforme_donnees
DB_USER=votreusername
DB_PASSWORD=votre_mot_de_passe_mysql
DB_HOST=localhost
DB_PORT=3306

# Allowed Hosts (séparés par des virgules)
ALLOWED_HOSTS=votreusername.pythonanywhere.com,localhost,127.0.0.1

